---
import { type Icon as IconType } from "@lucide/astro";

export interface Props {
  title: string;
  description: string;
  icon: typeof IconType;
  iconColor?: string;
}
const { title, description, icon: Icon, iconColor } = Astro.props;
---

<div
  class="bg-card rounded-xl shadow-md p-8 transform hover:scale-105 transition-transform duration-300"
>
  <div class:list={[iconColor, "mb-4 text-5xl"]}>
    <Icon class="w-12 h-12" />
  </div>
  <h3 class="text-2xl font-semibold mb-4">{title}</h3>
  <p class="text-muted-foreground">{description}</p>
</div>
