---
import { Code, ExternalLink } from "lucide-react";
import { ProjectTag } from "./ProjectTag";
import { Button } from "../../ui/Button";
import type { Project } from "./types";

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="w-full lg:w-1/2 space-y-6">
  <div class="space-y-4">
    <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
      <Code className="w-4 h-4" />
      <span>Featured Project</span>
    </div>

    <h3 class="text-3xl font-bold text-gray-900 dark:text-gray-100 leading-tight">
      {project.title}
    </h3>

    <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
      {project.description}
    </p>
  </div>

  <div class="flex flex-wrap gap-2">
    {project.tags.map((tag) => (
      <ProjectTag tag={tag} client:load />
    ))}
  </div>

  <div class="pt-4">
    <Button
      href={project.link}
      target="_blank"
      rel="noopener noreferrer"
      className="inline-flex items-center gap-2 transition-all duration-200 py-3 px-6 rounded-xl text-base font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
      aria-label={`${project.linkText} for ${project.title}`}
      elementType="a"
      variant="callToAction"
      size="custom"
      client:load
    >
      {project.linkText}
      <ExternalLink className="w-4 h-4" />
    </Button>
  </div>
</div>
