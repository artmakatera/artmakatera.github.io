---
import ProjectImage from "./ProjectImage.astro";
import ProjectContent from "./ProjectContent.astro";
import type { Project } from "./types";

export interface Props {
  project: Project;
  index: number;
}

const { project, index } = Astro.props;

const isEven = index % 2 === 0;
const layoutClass = isEven ? "lg:flex-row" : "lg:flex-row-reverse";
---

<article class={`flex flex-col ${layoutClass} gap-8 lg:gap-12 items-center`}>
  <ProjectImage project={project} />
  <ProjectContent project={project} />
</article>
